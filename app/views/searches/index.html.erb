<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<div id="title" ><h1> Yayyy twitter </h1></div>

<div id="map">
<div id="map-canvas" style></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
    handler.buildMap({ provider: {zoom: 3, provider_key: "AIzaSyDJJPOQH24cT6ETa9IZacS7NENpUt2MKzA"}, internal: {id: 'map-canvas'}}, function(){
    markers = handler.addMarkers([
      
      <% @tweets.each do |t| %>
        <% hasht = t.to_h %>
        <% if hasht[:coordinates] != nil %>

          <% latitude = hasht[:coordinates][:coordinates][1] %>
          <% longitude = hasht[:coordinates][:coordinates][0] %>
          {
          "lat": <%= latitude.to_f %>,
          "lng": <%= longitude.to_f %>,
          infowindow: "<%= hasht[:text].to_s %> "// info window text (this is optional)
        },
      <% end %>
      <% end %>
    ]);
    handler.map.centerOn(markers[0]); // centers on the first marker in the array
  });

</script>
<div class= "search">
<div class= "row">
    <div class="medium-3 columns"><%= form_tag searches_path, :method => 'get' do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag "Search" %>
<% end %>
</div>
</div>

