<div class="container">
	<h2 class="title">Change your password</h2>
	<br />
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
	  <%= devise_error_messages! %>
	  <%= f.hidden_field :reset_password_token %>

	  <%= f.password_field :password, :autofocus => true, placeholder: "Password" %>
		<br />
	  <%= f.password_field :password_confirmation, placeholder: "Confirm new password" %>
		<br />
	  <div><%= f.submit "Change my password", class: "bttn" %></div>
	<% end %>
	<br />
	<%= render "devise/shared/links" %>
</div>	
